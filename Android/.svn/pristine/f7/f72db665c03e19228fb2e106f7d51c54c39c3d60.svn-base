<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_individual_info_mana"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:background="@drawable/button_white" >

    <ImageView
        android:id="@+id/iv_bank_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="15dp" />

    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv_bank_icon"
        android:text="中国人民银行"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_sjzf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_bank_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_bank_name"
        android:src="@drawable/sjzf" >
    </ImageView>

    <TextView
        android:id="@+id/tv_card_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_bank_name"
        android:layout_below="@id/tv_bank_name"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="6222522*********0122" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/go_arrow" />

    <TextView
        android:id="@+id/ktylsjzf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_card_num"
        android:layout_below="@id/tv_card_num"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_red"
        android:paddingBottom="5dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="5dp"
        android:text="开通银联手机支付"
        android:textColor="@color/white"
        android:textSize="17sp" />
</RelativeLayout>
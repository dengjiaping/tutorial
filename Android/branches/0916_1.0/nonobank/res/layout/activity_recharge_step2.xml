<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grey_background"
    android:layout_height="match_parent">


    <include layout="@layout/actionbar_common"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:text="第二步 : 输入充值金额"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_money"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:maxLength="15"
            android:textSize="18sp"
            android:numeric="decimal"
            android:layout_height="wrap_content"
            android:hint="输入金额"
            />

        <TextView
            android:id="@+id/tv_sxf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="充值手续费"/>
        <TextView
            android:id="@+id/tv_real_pay_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="实际支付金额"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#959595"
            android:text="单笔充值金额必须>10元"/>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:text="第三步 : 输入支付密码"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_pay_pwd"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:text="it789123"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:hint="输入支付密码"
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textColor="#007aff"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="忘记支付密码" />
    </LinearLayout>


    <Button
        android:id="@+id/bt_recharge"
        style="@style/OrangeButtonFillet"
        android:text="确认充值"
        />

</LinearLayout>
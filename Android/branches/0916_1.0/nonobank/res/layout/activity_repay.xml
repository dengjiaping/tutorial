<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <include layout="@layout/actionbar_common" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" >

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_repay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp" >

                <FrameLayout
                    android:id="@+id/frame_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </FrameLayout>
            </android.support.v4.view.ViewPager>

            <ImageView
                android:id="@+id/iv_vp_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_red" />

            <ImageView
                android:id="@+id/iv_vp_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/next_red" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_button_group_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

            <Button
                android:id="@+id/bt_immediately_pay_0"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_blue_fillet"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="立即还款" />

            <Button
                android:id="@+id/bt_repay_history_0"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/bt_immediately_pay_0"
                android:background="@drawable/button_blue_fillet"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="还款记录" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_button_group_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/bt_early_pay_1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_blue_fillet"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="提前还款" />

            <Button
                android:id="@+id/bt_immediately_pay_1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/bt_early_pay_1"
                android:background="@drawable/button_blue_fillet"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="立即还款" />

            <Button
                android:id="@+id/bt_repay_history_1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/bt_immediately_pay_1"
                android:background="@drawable/button_blue_fillet"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="还款记录" />
        </RelativeLayout>

        <ListView
            android:id="@+id/lv_repay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="@color/grey_background" />
    </LinearLayout>

</FrameLayout>
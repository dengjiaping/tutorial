<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="用户名"
        android:text="yinyibo" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_username"
        android:layout_below="@+id/et_username"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword"
        android:text="abc123456" />

    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_validatemobile"
        android:layout_below="@+id/et_validatemobile"
        android:ems="10"
        android:hint="手机号" />

    <Button
        android:id="@+id/bt_sendMessage"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/et_mobile"
        android:layout_toRightOf="@+id/et_mobile"
        android:background="@drawable/button_orange_fillet"
        android:text="发送" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_mobile"
        android:layout_below="@+id/et_mobile" >

        <RadioButton
            android:id="@+id/rb_licai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="理财" />

    </RadioGroup>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/rg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_orange_fillet"
        android:text="注册" />

    <EditText
        android:id="@+id/et_validatemobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_pwd"
        android:layout_below="@+id/et_pwd"
        android:ems="10"
        android:text="0615" />



</RelativeLayout>
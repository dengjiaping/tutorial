<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="defaultHandleMapping" class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping">
        <property name="rootHandler" ref="handlerMapping"/>
    </bean>

    <bean id="httpRequestHandler" class="org.springframework.web.servlet.mvc.HttpRequestHandlerAdapter" />
    
    <bean name="/remoting/LocationService" class="org.springframework.remoting.caucho.HessianServiceExporter">
        <property name="service" ref="locationService" />
        <property name="serviceInterface" value="com.nonobank.user.facade.LocationService" />
    </bean>

    <bean name="/remoting/UserDictService" class="org.springframework.remoting.caucho.HessianServiceExporter">
        <property name="service" ref="userDictService" />
        <property name="serviceInterface" value="com.nonobank.user.facade.UserDictService"/>
    </bean>
</beans>